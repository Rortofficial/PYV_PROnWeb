        function onLoadingDataTable(data) {
            listData = [];
            listData = data;
            var tbListItemLine = $('#TbListBookingSheet').DataTable();
            tbListItemLine.clear();
            tbListItemLine.rows.add(data);
            tbListItemLine.search("").columns().search("").draw();
        }
        $("#btnExportData").click(function () {
            $.ajax({
