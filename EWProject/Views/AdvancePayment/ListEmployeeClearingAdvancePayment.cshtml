@*@model Client.Models.Response.GetAdvancePaymentClearingResponse
<title>@ViewData["Title"] - EWSystem</title>
<div class="row mt-1">
        <div class="col-4"><h5>List Of Clearing Advance</h5></div>
        <div class="col-8">
           <a asp-controller="AdvancePayment" asp-action="Index" class="btn float-end" style="background-color:#01295C;color:white">
                Add NewData
            </a>
        </div>
    </div>
<div class="table-responsive mt-2">
    <div class="row">
        <div class="col-12">
            <table id="TbListConfirmBookingSheet" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0" style="background: #f0eff1; color: #696969;">
                <thead>
                    <tr>
                        <th>Row#</th>
                        <th>Action</th>
                        <th>WebID</th>
                        <th>Posting Date</th>
                        <th>EmployeeName</th>
                        <th>AccountName</th>
                        <th>TOTAL</th>
                        <th>REMARK</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Data != null)
                    {
                        @foreach (var a in Model.Data)
                        {
                            <tr>
                                <td>@a.Row</td>
                                <td>
                                    <button class="btn" style="float:right;background-color:#01295C;color:white" onclick="CopyTo('@Url.Action("AddEmployeeClearingAdvance","AdvancePayment")?transId=@a.DocEntry')">Copy to</button>
                                </td>
                                <td>@a.WebID</td>
                                <td>@a.DocDate</td>
                                <td>@a.EmployeeName</td>
                                <td>@a.AccountName</td>
                                <td>@a.Total</td>
                                <td>@a.Remarks</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $('#TbListConfirmBookingSheet').DataTable();
        function CopyTo(url) {
            window.location.href = url;
        }
    </script>
}*@