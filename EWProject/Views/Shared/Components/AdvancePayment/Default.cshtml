            purchaseRequest.ID = countint;
            purchaseRequest.RefNo = $("#txtRefNo-" + id).val();
            purchaseRequest.JobNo = $("#txtJobNo-" + id).val();
            purchaseRequest.IssueBy = $("#UserID").attr("data-empid"); //data-empid
