                    }
                }
            ],
    });
    function DeleteLineItem@{@Html.Raw($"itemLinePR{ViewBag.PRID}")}(id){
        @Html.Raw($"itemLinePR{ViewBag.PRID}".Trim()) = @Html.Raw($"itemLinePR{ViewBag.PRID}.filter(e => e.id !== id);".Trim())
