                    $('#Modalloder').modal('show');
                },
                success: function (data) {
                    $('#Modalloder').modal('hide');
                    $('@Html.Raw($"#{ViewBag.listPRID}")').html(data);
                    $('@Html.Raw($"#{ViewBag.listPRTemplate}".Trim())').empty();
