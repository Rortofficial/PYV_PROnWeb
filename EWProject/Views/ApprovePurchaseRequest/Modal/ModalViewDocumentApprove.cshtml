@using Client.Connection;
@*@model List<Client.Models.Response.GetCO>;*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<div class="modal fade" id="ModalViewDocumentApprove" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#01295C;color:white">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Document Information</h1>
                <button type="button" class="btn-close" style="background-color: white;opacity: 1;" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div style="margin:auto;text-align:left;font-weight:bold;"><u>@localizer["HEADER PURCHASEREQUEST"]</u></div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">@localizer["Document Status"]</div>
                            <div class="col-8">
                                <input type="hidden" id="txtDocEntry" value="" />
                                <input type="text" class="form-control" id="txtStatus" value="" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">@localizer["REF NO"]</div>
                            <div class="col-8">
                                <input type="hidden" id="txtDocEntry" value="" />
                                <input type="text" class="form-control" id="txtRefNo" value="" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">@localizer["ISSUE DATE"]</div>
                            <div class="col-8">
                                <input type="text" class="form-control" id="txtIssueDate" disabled value="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">@localizer["ISSUE BY"]</div>
                            <div class="col-8">
                                <input type="text" class="form-control" id="txtIssueByName" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">@localizer["Due DATE"]</div>
                            <div class="col-8">
                                <input type="text" class="form-control" id="txtDueDate" disabled value="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">
                                @localizer["Vendor Name"]
                            </div>
                            <div class="col-9">
                                <input type="text" class="form-control" disabled id="txtVendorName" value="">
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">
                                @localizer["Job No"]
                            </div>
                            <div class="col-9">
                                <input type="text" style="" class="form-control" id="txtJobNo" disabled value="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">
                                @localizer["Ammount Currency"]
                            </div>
                            <div class="col-9">
                                <input type="text" class="form-control" disabled id="txtAmountCurrency" value="">
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">
                                @localizer["Link To JobSheet"]
                            </div>
                            <div class="col-9">
                                <select class="form-select" id="btnLinkTo" style="float:right;background-color:#01295C;color:white;">
                                    <option selected value="-1">Select Document Link</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-6"></div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">
                                @localizer["Link To ConfirmBooking"]
                            </div>
                            <div class="col-9">
                                <select class="form-select" id="btnLinkToCon" style="float:right;background-color:#01295C;color:white;">
                                    <option selected value="-1">Select Document Link</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <div style="margin:auto;text-align:left;font-weight:bold;"><u>@localizer["LINE PURCHASEREQUEST"]</u></div>
                    </div>
                </div>
                <div class="table-responsive mt-3">
                    <div class="row">
                        <div class="col-12">
                            <div class="table-line">
                                <div id="itemType">
                                    <div class="row mt-2">
                                        <div class="col-12">
                                            <table id="TbListLineItemPurchaseRequest" class="table table-striped table-bordered dt-responsive table-condensed display" width="100%" cellspacing="0" style="background: #f0eff1; color: #696969;">
                                                <thead>
                                                    <tr>
                                                        <th>Description</th>
                                                        <th>Container Type</th>
                                                        <th>Truck No</th>
                                                        <th>Truck Type</th>
                                                        <th>Trailer Type</th>
                                                        <th>Distr.Rule</th>
                                                        <th>RefInv</th>
                                                        <th>Tax Code</th>
                                                        <th>Job No</th>
                                                        <th>Loading Date</th>
                                                        <th>Amount</th>
                                                        <th>Place Of Loading</th>
                                                        <th>Place Of Delivery</th>
                                                        <th>Remarks</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row mt-4">
                    <div class="col-6">
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">
                                @localizer["Grand Total"]
                            </div>
                            <div class="col-9">
                                <input type="number" class="form-control" id="txtGrandTotal" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">@localizer["Grand Total THB"]</div>
                            <div class="col-9">
                                <input type="number" class="form-control" id="txtAmountTHB" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">
                                @localizer["Bank Account"]
                            </div>
                            <div class="col-9">
                                <input type="text" class="form-control" id="txtBankAccount" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">@localizer["Branch"]</div>
                            <div class="col-9">
                                <input type="text" class="form-control" id="txtBranch" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">@localizer["Country"]</div>
                            <div class="col-9">
                                <input type="text" class="form-control" id="txtCountry" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">
                                @localizer["Bank Name"]
                            </div>
                            <div class="col-9">
                                <input type="text" class="form-control" id="txtBankName" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">@localizer["Swift Code"]</div>
                            <div class="col-9">
                                <input type="text" class="form-control" id="txtSwiftCode" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-6">
                        <div style="margin:auto;text-align:left;font-weight:bold;"><u>@localizer["Remark"]</u></div>
                    </div>
                    <div class="col-6">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <textarea id="remarks" rows="4" disabled class="form-control"></textarea>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-6">
                        <div style="margin:auto;text-align:left;font-weight:bold;"><u>@localizer["Reason Remark"]</u></div>
                    </div>
                    <div class="col-6">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <textarea id="reasonRemarks" rows="4" class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                @if (Configure.ListOfPermissionsByUser.Where(x =>
                        x.IsPermission == Client.Connection.Configure.ListOfPermissions.Where(x => x.Key == "ApprovalDocument").First().Properties.IsPermission
                        && x.IsAllowCancel == Client.Connection.Configure.ListOfPermissions.Where(x => x.Key == "ApprovalDocument").First().Properties.IsAllowReadOnly).Count() == 1)
                {
                    <button type="button" class="btn btn-danger" id="btnReject" @*data-bs-dismiss="modal"*@>Reject</button>
                }
                @if (Configure.ListOfPermissionsByUser.Where(x =>
                        x.IsPermission == Client.Connection.Configure.ListOfPermissions.Where(x => x.Key == "ApprovalDocument").First().Properties.IsPermission
                        && x.IsAllowAdd == Client.Connection.Configure.ListOfPermissions.Where(x => x.Key == "ApprovalDocument").First().Properties.IsAllowReadOnly).Count() == 1)
                {
                    <button type="button" class="btn" id="btnApprove" style="background-color:#01295C;color:white">Approve</button>
                }
            </div>
        </div>
    </div>
</div>
