@*@model List<Client.Models.Response.GetCO>;*@
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<div class="modal fade" id="ModalViewDocumentApproveComission" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#01295C;color:white">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Document Information</h1>
                <button type="button" class="btn-close" style="background-color: white;opacity: 1;" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div style="margin:auto;text-align:left;font-weight:bold;"><u>@localizer["HEADER PURCHASEREQUEST FOR  COMISSION"]</u></div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">@localizer["Document Status"]</div>
                            <div class="col-8">
                                <input type="hidden" id="txtDocEntryComission" value="" />
                                <input type="text" class="form-control" id="txtStatusComission" value="" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">@localizer["REF NO"]</div>
                            <div class="col-8">
                                <input type="hidden" id="txtDocEntryComission" value="" />
                                <input type="text" class="form-control" id="txtRefNoComission" value="" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">@localizer["ISSUE DATE"]</div>
                            <div class="col-8">
                                <input type="text" class="form-control" id="txtIssueDateComission" disabled value="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">@localizer["ISSUE BY"]</div>
                            <div class="col-8">
                                <input type="text" class="form-control" id="txtIssueByNameComission" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">@localizer["Due DATE"]</div>
                            <div class="col-8">
                                <input type="text" class="form-control" id="txtDueDateComission" disabled value="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">
                                @localizer["Vendor Name"]
                            </div>
                            <div class="col-9">
                                <input type="text" class="form-control" disabled id="txtVendorNameComission" value="">
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">
                                @localizer["Ammount Currency"]
                            </div>
                            <div class="col-9">
                                <input type="text" class="form-control" disabled id="txtAmountCurrencyComission" value="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <div style="margin:auto;text-align:left;font-weight:bold;"><u>@localizer["LINE"]</u></div>
                    </div>
                </div>
                <div class="table-line">
                    <div id="itemType">
                        <div class="row mt-2">
                            <div class="col-12">
                                <table id="TbListLineItemPurchaseRequestForComission" class="table table-striped table-bordered dt-responsive table-condensed @*nowrap*@" width="100%" cellspacing="0" style="background: #f0eff1; color: #696969;">
                                    <thead>
                                        <tr>
                                            <th>Account Code</th>
                                            <th>Job Number</th>
                                            <th>ARInvoice Number</th>
                                            <th>Receipt Number</th>
                                            <th>Grand Total Selling</th>
                                            <th>Grand Total Costing</th>
                                            <th>GrossProfit</th>
                                            <th>Percentage</th>
                                            <th>Total Sales Commission</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">
                                @localizer["Grand Total Costing"]
                            </div>
                            <div class="col-9">
                                <input type="number" class="form-control" id="txtGrandTotalCostingComission" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">
                                @localizer["Grand Total Selling"]
                            </div>
                            <div class="col-9">
                                <input type="number" class="form-control" id="txtGrandTotalSellingComission" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">
                                @localizer["Grand Total Gross Profit"]
                            </div>
                            <div class="col-9">
                                <input type="number" class="form-control" id="txtGrandTotalGrossProfitComission" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                    </div>
                    <div class="col-6">
                        <div class="row">
                            <div class="col-3" style="margin:auto;text-align:left;font-weight:bold;">
                                @localizer["Grand Total"]
                            </div>
                            <div class="col-9">
                                <input type="number" class="form-control" id="txtGrandTotalComission" disabled>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-6">
                        <div style="margin:auto;text-align:left;font-weight:bold;"><u>@localizer["Reason Remark"]</u></div>
                    </div>
                    <div class="col-6">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <textarea id="reasonRemarksComission" rows="4" class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnRejectComission" @*data-bs-dismiss="modal"*@>Reject</button>
                <button type="button" class="btn" id="btnApproveComission" style="background-color:#01295C;color:white">Approve</button>
            </div>
        </div>
    </div>
</div>