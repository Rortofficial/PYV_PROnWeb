@model Client.Models.Response.ResponseData<List<Client.Models.Gets.GetConfirmBookingSheetByUser>>
<title>@ViewData["Title"] - EWSystem</title>
<div class="row mt-1">
    <div class="col-4"><h5><u>Please select Confirm booking</u></h5></div>
    <div class="col-8">        
    </div>
</div>
<div class="table-responsive mt-1">
    <div class="row">
        <div class="col-12">
            <table id="TbListConfirmBookingSheet" class="table table-striped table-bordered dt-responsive table-condensed display" width="100%" cellspacing="0" style="background: #f0eff1; color: #696969;">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>BOOKING ID</th>
                        <th>JOB NO.</th>
                        <th>BOOKING DATE</th>
                        <th>IMPORT TYPE</th>
                        <th>C/O</th>
                        <th>ROUTE</th>
                        <th>Create By</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Data != null)
                    {
                       @foreach (var a in Model.Data)
                        {
                            <tr>
                                <td>
                                    <button class="btn" style="float:right;background-color:#01295C;color:white" onclick="CopyTo('@Url.Action("Index","JobSheetTrucking")?ConfirmBooking=@a.BookingID&UserID='+$('#UserID').attr('data-empid'))">Copy to</button>
                                </td>
                                <td>@a.BookingID</td>
                                <td>@a.JobNo</td>
                                <td>@a.BookingDate</td>
                                <td>@a.ImportType</td>
                                <td>@a.CO</td>
                                <td>@a.Route</td>
                                <td>@a.CreateBy</td>
                            </tr>
                        } 
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $('#TbListConfirmBookingSheet').DataTable();
        function CopyTo(url) {
            window.open(url);
            // window.location.href = url;
        }
    </script>
}