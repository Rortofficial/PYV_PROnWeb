@model List<Client.Models.Gets.GetBookingSheetByUser>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using Newtonsoft.Json
<div class="modal fade" id="ModalBookingSheetList" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#01295C;color:white">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">@localizer["List Of BookingSheet Sea and Air"]</h1>
                <button type="button" class="btn-close" style="background-color: white;opacity: 1;" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <div class="row">
                        <div class="col-12">
                            <table id="TbListBookingSheet" class="table table-striped table-bordered dt-responsive table-condensed @*nowrap*@" width="100%" cellspacing="0" style="background: #f0eff1; color: #696969;">
                                <thead>
                                    <tr>
                                        <th>Action</th>
                                        @*<th>BOOKING ID</th>*@
                                        <th>JOB NO.</th>
                                        <th>BOOKING DATE</th>
                                        <th>Loading Date</th>
                                        <th>Cross Border Date</th>
                                        <th>ETA Requirement Date</th>
                                        <th>IMPORT TYPE</th>
                                        <th>Shipper</th>
                                        <th>Consignee</th>
                                        <th>C/O</th>
                                        <th>ROUTE</th>
                                        <th>Create By</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        @foreach (var a in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <button class="btn" style="float:right;background-color:#01295C;color:white" onclick="onCopyListBookingSheet('@Url.Action("ContainerInformation","ConfirmBookingSheetSeaAndAir")','@a.BookingID','@JsonConvert.SerializeObject(a)','@Url.Action("GetDetailConfirmBooking","ConfirmBookingSheetSeaAndAir")')">Copy to</button>
                                                    @*<button class="btn btn-danger" style="float:right;background-color:#01295C;color:white">Cancel</button>*@
                                                </td>
                                                @*<td>@a.BookingID</td>*@
                                                <td>@a.JobNo</td>
                                                <td>@a.BookingDate</td>
                                                <td>@a.LoadingDate</td>
                                                <td>@a.CrossBorderDate</td>
                                                <td>@a.ETARequirementDate</td>
                                                <td>@a.ImportType</td>
                                                <td>@a.Shipper</td>
                                                <td>@a.Consignee</td>
                                                <td>@a.CO</td>
                                                <td>@a.Route</td>
                                                <td>@a.CreateBy</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">@localizer["Close"]</button>
                @*<button type="button" class="btn" id="btnChooseBookingSheet" style="background-color:#01295C;color:white">@localizer["Choose"]</button>*@
            </div>
        </div>
    </div>
</div>