@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model Client.Models.Response.ResponseData<List<Client.Models.Gets.GetReportByID>>
@if (Model.ErrorCode !=0)
{
    <h2>@Model.ErrorMessage</h2>
}
else
{
    @section scripts{
    <form enctype="multipart/form-data"  asp-controller="Report" asp-action="OnSubmitReport" method="post">
    @Html.Raw(ViewBag.Tage)
    <input type="hidden" name="txtCode" value="@Model.Data[0].Code"/>    
    <div class="row mt-3">
        <div class="col-6">
            <div class="row">
            <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">Export Type</div>
            <div class="col-8">
                <select class="form-select" name="cboSelectSeries" id="cboSelectSeries">
                    <option selected value="PDF">PDF</option>
                    <option value="WORD">WORD</option>
                    <option value="EXCEL">EXCEL</option>
                </select>
            </div>
        </div>
        </div>
        <div class="col-6">
        </div>
        <div class="col-6">
        </div>
        <div class="col-6">
            <input type="submit" class="btn" style="float:right;background-color:#01295C;color:white" name="Run Report"/>
        </div>
    </div>
    </form>
       @* <script defer>
            alert("Hello");
        </script>*@
    }
}
