@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model Client.Models.Response.ResponseData<List<Client.Models.Gets.GetReportByUser>>
@{
    ViewData["Title"] = "Home Page";
}
@if (Model.ErrorCode != 0)
{
    <h2>@Model.ErrorMessage</h2>
}
else
{

    <div class="row">
        <center>
            <div class="col-9">
                <div class="row">
                    @foreach (var a in Model.Data)
                    {
                        <div class="alink col-lg-3 col-md-3 col-12">
                            <a asp-controller="Report" asp-action="ReportByID" asp-route-id="@a.Code">
                                <div style="width: 100%; height: 100%; background: #01295C;border-radius:5px">
                                    <div style="text-align: center">
                                        <p style="text-align: center; padding-top: 15px;">
                                            <b>@a.Name</b><br>
                                            @* <i id="Icon" class="fas fa-user-plus" aria-hidden="true"></i>*@
                                            <i id="Icon" class="fas fa-chart-area" aria-hidden="true"></i>
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }

                    @*<div class="alink col-lg-3 col-md-3 col-12">
                <a asp-controller="Report" asp-action="ReportByID" asp-route-id="1">
                <div style="width: 100%; height: 100%; background: #01295C;border-radius:5px">
                <div style="text-align: center">
