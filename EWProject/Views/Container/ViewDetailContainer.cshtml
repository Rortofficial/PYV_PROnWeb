        </div>
        <div class="col-10">
            <div style="float:right">
                <h2>@localizer["Container View Detail"]</h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div style="margin:auto;text-align:left;font-weight:bold;"><u>@localizer["HEADER"]</u></div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-6">
            <div class="row">
                <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">@localizer["ISSUE BY"]</div>
                <div class="col-8">
                    <input type="text" class="form-control" id="txtCustomerType" disabled value="@Model.Data.IssueBy">
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="row">
                <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">@localizer["DOCUMENT NUMBER"]</div>
                <div class="col-8">
                    <input type="text" class="form-control" id="txtCustomerType" disabled value="@Model.Data.DocNum">
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-6">
            <div class="row">
                <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">@localizer["ISSUE DATE"]<span style="color:red">*</span></div>
                <div class="col-8">
                    <input type="text" class="form-control" id="txtCustomerCode" disabled value="@Model.Data.IssueDate">
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="row">
                <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">@localizer["ORIGIN"]</div>
                <div class="col-8">
                    <input type="text" class="form-control" id="txtRefNo" disabled value="@Model.Data.Origin" readonly>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-6">
        </div>
        <div class="col-6">
            <div class="row">
                <div class="col-4" style="margin:auto;text-align:left;font-weight:bold;">@localizer["DESTINATION"]</div>
                <div class="col-8">
                    <input type="text" class="form-control" id="txtDate" disabled value="@Model.Data.Destination" readonly>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <div style="margin:auto;text-align:left;font-weight:bold;"><u>@localizer["LINE"]</u></div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <table id="TbListLineSalesQuotation" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0" style="background: #f0eff1; color: #696969;">
                <thead>
                    <tr>
                        <th>Project Number</th>
                        <th>Container</th>
                        <th>Origin</th>
                        <th>Destination</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var z in Model.Data.Lines)
                    {
                        <tr>
                            <td>@z.Project</td>
                            <td>@z.ContainerCode</td>
                            <td>@z.Origin</td>
                            <td>@z.Destination</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-6">
            <div style="margin:auto;text-align:left;font-weight:bold;"><u>@localizer["Remark"]</u></div>
        </div>
        <div class="col-6">
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12">
            <textarea id="remarks" rows="4" disabled class="form-control">@Model.Data.Comment</textarea>
        </div>
    </div>
}