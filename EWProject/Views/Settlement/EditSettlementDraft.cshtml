            $("#txtPaid").val(0);
            $("#txtCashOnHand").val(0);
            $("#txtlineNumAD").val("");
            $("#txtlineNumPO").val("");
            $("#txtlineNumPR").val("");
            $("#txtTransportationNo").val("");
